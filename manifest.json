{
    "manifest_version": 2,
    "name": "EngineSwitcher",
    "version": "0.1",
    "applications": {
        "gecko": {
            "id": "{44dc2f10-2812-48f1-bb39-e880679115b0}"
        }
    },
    "description": "Switch search engine in one click",
    "icons": {
        "256": "img/icon.png"
    },
    "page_action": {
      "browser_style": true,
      "default_icon": {
        "256": "img/icon.png"
      },
      "default_title": "Switch Engine!"
    },
    "background": {
        "scripts": ["dist/background.js"]
    },
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "*://duckduckgo.com/*",
                "*://www.startpage.com/*",
                "*://www.bing.com/*",
                "*://www.google.com/*"
            ],
            "js": ["dist/content.js"]
        }
    ],
    "permissions": [ "tabs", "storage" ],
    "commands": {
        "_execute_page_action": {
            "suggested_key": {
                "default": "Ctrl+Alt+N",
                "linux": "Ctrl+Alt+N"
            },
            "description": "Switch to next search engine."
        }
    },
    "options_ui": {
        "page": "options_ui/index.html"
    },
    "content_security_policy": "default-src 'self' 'unsafe-eval'"
}