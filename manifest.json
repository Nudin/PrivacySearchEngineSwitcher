{
    "manifest_version": 2,
    "name": "EngineSwitcher",
    "version": "0.1",
    "applications": {
        "gecko": {
            "id": "{44dc2f10-2812-48f1-bb39-e880679115b0}"
        }
    },
    "description": "Switch search engine in one click",
    "page_action": {
      "browser_style": true,
      "default_icon": {
        "19": "img/ddg-19.png",
        "38": "img/ddg-38.png"
      },
      "default_title": "Switch Engine!"
    },
    "background": {
        "scripts": ["dist/background.js"]
    },
    "content_scripts": [
        {
            "run_at": "document_start",
            "matches": [
                "*://duckduckgo.com/*",
                "*://www.startpage.com/*",
                "*://www.bing.com/*",
                "*://www.google.com/*"
            ],
            "js": ["dist/content.js"]
        }
    ],
    "permissions": [ "tabs" ]
}